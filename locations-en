    <script src="js/vendor.js"></script>
    <script src="js/main.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const languageSelect = document.getElementById('languageSelect');
            const currentPage = window.location.pathname.split('/').pop();
            
            // Set initial language selection
            languageSelect.value = document.documentElement.lang;

            languageSelect.addEventListener('change', function() {
                const newLang = this.value;
                let newPage = currentPage;

                if(newLang === 'ja') {
                    // Switch to Japanese version
                    if(currentPage === 'locations-en.html') {
                        newPage = 'locations.html';
                    } else {
                        newPage = currentPage.replace('-en.html', '.html');
                    }
                } else {
                    // Switch to English version
                    newPage = currentPage.replace('.html', '-en.html');
                }

                // Handle index page separately
                if(currentPage === 'index.html' || currentPage === 'index-en.html') {
                    newPage = newLang === 'ja' ? 'index.html' : 'index-en.html';
                }

                window.location.href = newPage;
            });
        });
    </script>
